<Window x:Class="ESP32_DS4_Controller_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ESP32 DS4 Controller" Height="587" Width="812"
        Background="#1e1e1e" Foreground="White"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        FontFamily="Consolas">
    <Window.Resources>
        <Style x:Key="KeyButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#323232"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}"
                        Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- При наведении -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#444444"/>
                                <!-- ← ЦВЕТ ПРИ НАВЕДЕНИИ -->
                                <Setter TargetName="border" Property="BorderBrush" Value="#666666"/>
                            </Trigger>
                            <!-- При нажатии -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#555555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="KeyTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#232323"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>

    </Window.Resources>
    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="15"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- TITLE BAR -->
        <Border Grid.Row="0" Background="#2d2d2d" BorderBrush="#444" MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" 
                           Text="ESP32 DS4" 
                           Foreground="White" 
                           VerticalAlignment="Center" 
                           FontSize="20" FontWeight="Bold" Height="24" Margin="-1,0,0,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Width="15" Height="15" Background="Transparent" BorderThickness="0"
                            Click="MinimizeButton_Click" ToolTip="Свернуть" Style="{StaticResource CustomButtonStyle}" Padding="0,0,0,0">
                        <TextBlock Text="−" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Height="24"/>
                    </Button>
                    <Button Width="15" Height="15" Background="Transparent" BorderThickness="0"
                            Click="CloseButton_Click" ToolTip="Закрыть" Style="{StaticResource CustomButtonStyle}" Padding="0,0,0,0">
                        <TextBlock Text="✕" FontSize="15" Foreground="#FF6B00" VerticalAlignment="Center" HorizontalAlignment="Center" Height="18"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Левая большая (2/3) -->
                <ColumnDefinition Width="*" />
                <!-- Правая малая (1/3) -->
            </Grid.ColumnDefinitions>

            <!-- ЛЕВАЯ ПАНЕЛЬ -->
            <Grid Grid.Column="0" Margin="0,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <!-- Mapping -->
                    <RowDefinition Height="*" />
                    <!-- Features -->
                </Grid.RowDefinitions>

                <!-- Mapping (движение + действия) -->
                <Border Background="#00232323" CornerRadius="8" Margin="0,0,0,0" BorderBrush="#FF333333" BorderThickness="0,0,0,0.5" Cursor="">
                    <TextBlock Text="Mapping" FontSize="14" FontWeight="Bold" Margin="0,0,0,20"/>
                </Border>

                <!-- Features -->
                <Border Background="#00212121" Grid.Row="1" BorderBrush="#FF333333" BorderThickness="0,0.5,0,0">
                    <StackPanel>
                        <TextBlock Text="Features" FontSize="14" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="Mouse Sensitivity:" Width="120" FontSize="12"/>
                            <Slider Width="253" Minimum="1" Maximum="5" Value="2.5"/>
                        </StackPanel>
                        <CheckBox Content="Enable Rapid Fire" Foreground="White" Background="#FF333333" BorderBrush="#FF444444" HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="Rate:"/>
                            <TextBox Text="10" Width="20" Margin="2,0,2,0" Background="#FF232323" Foreground="White" BorderBrush="#FF444444" />
                            <TextBlock Text="(clicks/sec)" VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                            <TextBlock Text="Randomization Min (ms):"/>
                            <TextBox Text="4" Width="20" Background="#FF232323" Foreground="White" BorderBrush="#FF444444" Margin="2,0,2,0"/>
                            <TextBlock Text="Max (ms):"/>
                            <TextBox Text="40" Width="20" Background="#FF232323" Foreground="White" BorderBrush="#FF444444" Margin="2,0,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- После Feature блока -->
                <StackPanel Orientation="Vertical" Margin="0,344,0,0">
                    <UniformGrid Rows="1" Height="43">
                        <Button Content="Test: Move Up" Click="TestButton_Up" Height="30" Background="#FF333333" Foreground="White" BorderBrush="#FF444444"/>
                        <Button Content="Test: Move Down" Click="TestButton_Down" Height="30" Background="#FF333333" Foreground="White" BorderBrush="#FF444444"/>
                        <Button Content="Test: Move Left" Click="TestButton_Left" Height="30" Background="#FF333333" Foreground="White" BorderBrush="#FF444444"/>
                        <Button Content="Test: Move Right" Click="TestButton_Right" Height="30" Background="#FF333333" Foreground="White" BorderBrush="#FF444444"/>
                        <Button Content="Test: Press X" Click="TestButton_PressX" Height="30" Background="#FF333333" Foreground="White" BorderBrush="#FF444444"/>
                    </UniformGrid>
                </StackPanel>

                <StackPanel>
                    <Image Source="pad.png" HorizontalAlignment="Center" VerticalAlignment="Center" Height="280" Margin="0,45,0,0"/>

                </StackPanel>

                <TextBox x:Name="Power" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="511,10,10,351" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>

                <TextBox x:Name="X_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="491,146,30,215" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="Y_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="491,96,30,265" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="B_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="491,121,30,240" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="A_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="491,171,30,190" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <!-- Left D-Pad -->
                <TextBox x:Name="L_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="27,146,494,215" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="R_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="27,96,494,265" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="UP_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="27,121,494,240" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="D_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="27,171,494,190" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <!-- Game Menu -->
                <TextBox x:Name="GMENU_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="261,232,260,129" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <!-- Menu Buttons -->
                <TextBox x:Name="MENU_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="196,33,325,328" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="MENU2_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="327,33,194,328" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <!-- Right Shoulder Buttons -->
                <TextBox x:Name="RT_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="436,10,85,351" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="RB_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="436,35,85,326" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <!-- Left Shoulder Buttons -->
                <TextBox x:Name="LT_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="85,10,436,351" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>
                <TextBox x:Name="LB_key" TextWrapping="Wrap" Text="" Width="20" Height="20" Margin="85,35,436,326" GotFocus="KeyTextBox_GotFocus" LostFocus="KeyTextBox_LostFocus" Style="{StaticResource KeyTextBoxStyle}"/>

            </Grid>

            <!-- ПРАВАЯ ПАНЕЛЬ -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="217*"/>
                    <!-- Debug log -->
                    <RowDefinition Height="107*"/>
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,359" HorizontalAlignment="Right">
                    <TextBlock Text="COM Port:" VerticalAlignment="Center"/>
                    <ComboBox Name="ComPortCombo" Width="80" Height="18" Background="#FF232323" Foreground="#FF4C4C4C" BorderBrush="#FF444444" Margin="0,0,8,0">
                        <ComboBoxItem>COM1</ComboBoxItem>
                        <ComboBoxItem>COM2</ComboBoxItem>
                        <ComboBoxItem>COM3</ComboBoxItem>
                        <ComboBoxItem>COM4</ComboBoxItem>
                        <ComboBoxItem>COM5</ComboBoxItem>
                        <ComboBoxItem>COM6</ComboBoxItem>
                        <ComboBoxItem>COM7</ComboBoxItem>
                        <ComboBoxItem>COM8</ComboBoxItem>
                        <ComboBoxItem>COM9</ComboBoxItem>
                        <ComboBoxItem>COM10</ComboBoxItem>
                    </ComboBox>
                    <Button Name="ConnectButton" Content="Connect" Width="118" Background="#FF333333" Foreground="White" BorderBrush="#FF444444" BorderThickness="1,0,0,1" Click="Button_Click" Style="{StaticResource CustomButtonStyle}"/>
                </StackPanel>

                <!-- Debug Output -->
                <TextBox Name="DebugConsole"
                             Background="#181818"
                             Foreground="#aaffaa"
                             FontFamily="Consolas"
                             FontSize="12"
                             IsReadOnly="True"
                             VerticalScrollBarVisibility="Auto"
                             BorderThickness="0"
                             BorderBrush="{x:Null}" TextChanged="DebugConsole_TextChanged" Margin="0,24,0,0" SelectionBrush="White"/>
                <!-- Profiles (ниже) -->
                <Border Background="#00151515" Grid.Row="1" BorderThickness="1,0.5,0,0">
                    <StackPanel >
                        <TextBlock Text="Profiles" FontSize="14" FontWeight="Bold" HorizontalAlignment="Left" Width="70" Margin="10,5,0,5"/>
                        <ListBox x:Name="ProfileListBox" Height="154" Background="#232323" Foreground="White" Margin="0,0,0,0" BorderBrush="#FF333333" BorderThickness="0,1,0,1" FontSize="12" SelectionChanged="ProfileListBox_SelectionChanged">
                            <UIElement.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </UIElement.RenderTransform>
                        </ListBox>
                        <UniformGrid Columns="4" Rows="1" VerticalAlignment="Bottom">
                            <Button Content="New" Margin="0,2,1,0" Background="#FF333333" Foreground="White" BorderBrush="#FF444444" Padding="1,1,1,1" BorderThickness="0,1,1,0" Style="{StaticResource CustomButtonStyle}" Click="NewProfileButton_Click"/>
                            <Button Content="Delete" Margin="1,2,1,0" Background="#FF333333" Foreground="White" BorderBrush="#FF444444" BorderThickness="1,1,1,0" Style="{StaticResource CustomButtonStyle}" Click="DeleteProfileButton_Click"/>
                            <Button Content="Import" Margin="1,2,1,0" Background="#FF333333" Foreground="White" BorderBrush="#FF444444" BorderThickness="1,1,1,0" Style="{StaticResource CustomButtonStyle}" Click="ImportProfileButton_Click"/>
                            <Button Content="Export" Margin="1,2,0,0" Background="#FF333333" Foreground="White" BorderBrush="#FF444444" BorderThickness="1,1,0,0" Style="{StaticResource CustomButtonStyle}" Click="ExportProfileButton_Click"/>
                        </UniformGrid>

                    </StackPanel>
                </Border>
            </Grid>

        </Grid>
    </Grid>
</Window>
